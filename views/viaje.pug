block contenido
    main.container.mt-5
        .row
            .col-md-5 
                img(src=`/img/destinos_${viaje.imagen}_ln.jpg`, alt="imagen viaje", class="img-fluid")
            .col-md-7
                h1 #{viaje.titulo}
                p 
                    svg.icon.icon-tabler.icon-tabler-calendar(xmlns='http://www.w3.org/2000/svg' width='35' height='35' viewbox='0 0 28 28' stroke-width='1.6' stroke='#DC135F' fill='none' stroke-linecap='round' stroke-linejoin='round')
